<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<!-- Background Color -->
	<color name="custom_theme_color">#323232</color>
	<!-- Action bar color -->
	<color name="action_theme_color">#5650aa</color>
    <style name="MyTheme" parent="@android:style/Theme.Holo">
    	<!-- Window color -->
	    <item name="android:windowBackground">@color/custom_theme_color</item>
	    <item name="android:colorBackground">@color/custom_theme_color</item>

	    <!-- Action Bar -->
	    <item name="android:actionBarStyle">@style/MyActionBar</item>

	    <!-- Default buttons -->
	    <item name="android:buttonStyle">@style/MyDefaultButtons</item>

	    <!-- Default text field -->
	    <item name="android:editTextStyle">@style/MyEditText</item>
    </style>
	
	<!-- Action bar -->
	<style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
		<item name="android:background">@color/action_theme_color</item>
	</style>

	<!-- Button -->
	<style name="MyDefaultButtons" parent="@android:style/Widget.Holo.Button">
		<item name="android:background">@drawable/questionbutton</item>
		<item name="android:layout_width">250dp</item>
		<item name="android:width">250dp</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:textColor">#e7e7e7</item>
	</style>

	<!-- EditText -->
	<style name="MyEditText" parent="@android:style/Widget.Holo.EditText">
		<item name="android:background">@drawable/textbackground</item>
		<item name="android:textColor">#404040</item>
		<item name="android:textSize">18dp</item>
		<item name="android:paddingLeft">5dp</item>
	</style>

	<!-- Layout with side padding -->
	<style name="LayoutWithPadding">
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
	</style>
		
	<!-- TextViews -->

	<!-- Headers -->
	<style name="TextViewHeaders">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">10.5dp</item>
		<item name="android:layout_marginTop">10.5dp</item>
		<item name="android:textSize">20dp</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
</resources>
